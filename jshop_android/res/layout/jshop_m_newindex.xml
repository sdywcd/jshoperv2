<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/indexpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue"     >

    <RelativeLayout
        android:id="@+id/centersquare"
        android:layout_width="384dp"
        android:layout_height="384dp"
        android:layout_centerInParent="true"
        android:background="@color/dark_blue"
        android:padding="6dp" >

        <ImageView
            android:id="@+id/sit"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@color/white"
            android:src="@drawable/indexchangesit"/>

        <ImageView
            android:id="@+id/ordingfoods"
            android:layout_width="246dp"
            android:layout_height="120dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/sit"
            android:background="@color/white"
            android:src="@drawable/indexorderdishes" />

        <ImageView
            android:id="@+id/calculator"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/sit"
            android:background="@color/white"
            android:src="@drawable/indexcalculator" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="246dp"
            android:layout_height="120dp"
            android:layout_below="@id/ordingfoods"
            android:layout_marginTop="6dp"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/calculator"
            android:background="@color/white"
            android:src="@drawable/indexlogo" />

        <ImageView
            android:id="@+id/advisement"
            android:layout_width="372dp"
            android:layout_height="120dp"
            android:layout_marginTop="6dp"
            android:layout_below="@id/calculator"
            android:background="@color/white"
            android:src="@drawable/indexadvertisement" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topRectangle"
        android:layout_width="580dp"
        android:layout_height="200dp"
        android:layout_above="@id/centersquare"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/rightRectangle"
        android:background="@color/dark_blue"
        android:paddingTop="6dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"	>

        <RelativeLayout
            android:id="@+id/block_1"
            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:background="@color/cobalt_blue"
            android:gravity="bottom|right" >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="246dp"
                android:layout_height="120dp"
                
                android:background="@color/dirty_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_2"
            android:layout_width="246dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"

            android:background="@color/cobalt_blue"
            android:gravity="right|bottom" >

            <ImageView
                android:id="@+id/image2"
                android:layout_width="246dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rightRectangle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/centersquare"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/topRectangle"
        android:background="@color/dark_blue"
        android:paddingRight="6dp"
        android:paddingTop="6dp" >

        <RelativeLayout
            android:id="@+id/block_3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image3"
                android:layout_width="120dp"
                android:layout_height="246dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_4"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/block_3"
            android:layout_marginTop="6dp"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image4"
                android:layout_width="120dp"
                android:layout_height="142dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leftRectangle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/topRectangle"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/topRectangle"
        android:layout_toLeftOf="@+id/centersquare"
        android:background="@color/dark_blue"
        android:paddingLeft="6dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp" >

        <RelativeLayout
            android:id="@+id/block_5"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image5"
                android:layout_width="120dp"
                android:layout_height="142dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_6"
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/block_5"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image6"
                android:layout_width="120dp"
                android:layout_height="246dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottomRectangle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/leftRectangle"
        android:layout_alignRight="@+id/rightRectangle"
        android:layout_below="@id/rightRectangle"
        android:layout_toRightOf="@id/leftRectangle"
        android:background="@color/dark_blue"
        android:paddingLeft="6dp"
        android:paddingBottom="6dp"
        android:paddingRight="6dp">

        <RelativeLayout
            android:id="@+id/block_7"
            android:layout_width="246dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dp"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image7"
                android:layout_width="246dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/block_8"
            android:layout_width="242dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/block_7"
            android:background="@color/cobalt_blue" >

            <ImageView
                android:id="@+id/image8"
                android:layout_width="246dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/dirty_blue" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>